<Page x:Class="RevitFamilyPalette.DockablePage" Name="MyDockableDialog" Title="Dockable Dialogs"       Background="#FFFFFFFF" Loaded="MyDockableDialog_Loaded"       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >    <!--xmlns:mc="clr-namespace:TestDockable3;assembly=TestDockable3,Version=1.0.0.0,Culture=neutral,PublicKeyToken=null">-->    <Grid>        <Grid.RowDefinitions>            <RowDefinition Height="20" />            <RowDefinition />            <RowDefinition Height="30" />        </Grid.RowDefinitions>        <!--<Grid.Resources>            <mc:MeasureConverter x:Key="measureConverter" />    </Grid.Resources>-->        <Border Grid.Row="0" Background="#FFD3D3D3" />        <TextBlock Name="LabelTitle" Grid.Row="0" Text="Title" HorizontalAlignment="Left" />        <TabControl Name="tabControl1" TabStripPlacement="Right" Grid.Row="1" SelectedIndex="0" Padding="1" ItemsSource="{Binding dict}">            <TabControl.Resources>                <Style x:Key="{x:Type TabItem}" TargetType="{x:Type TabItem}">                    <Setter Property="HeaderedContentControl.HeaderTemplate">                        <Setter.Value>                            <DataTemplate>                                <TextBlock Margin="0" Text="{Binding Key}">                                    <TextBlock.LayoutTransform>                                        <RotateTransform Angle="270" />                                    </TextBlock.LayoutTransform>                                </TextBlock>                            </DataTemplate>                        </Setter.Value>                    </Setter>                    <Setter Property="Control.Padding" Value="1" />                    <Setter Property="ContentControl.ContentTemplate">                        <Setter.Value>                            <DataTemplate>                                <ListView HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Value}" MouseUp="ListBox_MouseUp">                                    <!--<ListView ConnectionId="4" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Value}">-->                                    <ListView.ItemTemplate>                                        <DataTemplate>                                            <Grid>                                                <Grid.ToolTip>                                                    <StackPanel Width="250">                                                        <Image MaxHeight="250" Source="{Binding ImagePath}" />                                                        <TextBlock TextBlock.FontSize="16" Text="{Binding Title}" />                                                        <TextBlock TextWrapping="Wrap" Text="{Binding FilePath}" />                                                    </StackPanel>                                                </Grid.ToolTip>                                                <Grid.ColumnDefinitions>                                                    <ColumnDefinition />                                                    <ColumnDefinition />                                                </Grid.ColumnDefinitions>                                                <!--<Image Grid.Column="0" Margin="1" MaxHeight="100" Stretch="Uniform" MaxWidth="{Binding Width, RelativeSource={RelativeSource AncestorType=ListViewItem, Mode=FindAncestor}, Converter={StaticResource measureConverter}}" Source="{Binding ImagePath}" />-->                                                <Image Grid.Column="0" Margin="1" MaxHeight="100" Stretch="Uniform" Source="{Binding ImagePath}" />                                                <StackPanel Grid.Column="1">                                                    <TextBlock TextBlock.FontSize="14" TextWrapping="Wrap" Text="{Binding Title}" />                                                    <TextBlock TextBlock.FontSize="12" TextWrapping="Wrap" Text="{Binding FolderTitle}" />                                                </StackPanel>                                            </Grid>                                        </DataTemplate>                                    </ListView.ItemTemplate>                                </ListView>                            </DataTemplate>                        </Setter.Value>                    </Setter>                </Style>            </TabControl.Resources>        </TabControl>        <Border Grid.Row="2" Background="#FFD3D3D3" />        <Grid Grid.Row="2">            <Grid.ColumnDefinitions>                <ColumnDefinition />                <ColumnDefinition />            </Grid.ColumnDefinitions>            <Button Name="AddFamilies" Content="Add" Grid.Column="0" Margin="5" Click="AddFamilies_Click" />            <Button Name="buttonRefresh" Content="(test)" Grid.Column="1" Margin="5" Click="buttonRefresh_Click" />        </Grid>    </Grid></Page>